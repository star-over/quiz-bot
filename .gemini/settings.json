    "enabled": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "tools": {
    "shell": {
      "showColor": false
    }
  },
  "output": {
    "format": "text"
  },
  "mcpServers": {
