{
  "ui": {
    "hideBanner": true,
    "showMemoryUsage": true,
    "useFullWidth": true,
    "showLineNumbers": false,
    "footer": {
      "hideContextPercentage": false
    },
    "hideWindowTitle": true
  },

  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "tools": {
    "shell": {
      "showColor": false
    }
  },
  "output": {
    "format": "text"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "${CONTEXT7_API_KEY}"
      ]
    }
  }
}
